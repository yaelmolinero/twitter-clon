{
  "name": "twitter-clon",
  "version": "1.0.0",
  "description": "Un proyecto full stack inspirado en la red social X (twitter)",
  "author": "yaelmolinero",
  "license": "ISC",
  "type": "module",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "start:server": "npm run start --workspace=server",
    "start:client": "npm run preview --workspace=client",
    "lint": "eslint ./client ./server",
    "lint:fix": "eslint ./client ./server --fix"
  },
  "devDependencies": {
    "eslint": "9.21.0",
    "@eslint/js": "9.21.0",
    "typescript-eslint": "8.24.1",
    "typescript": "~5.7.2",
    "@types/node": "22.13.4",
    "globals": "15.15.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  }
}
